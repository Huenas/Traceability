    <div class="main-banner">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="top-text header-text">
                        <h2>Cherchez un produit</h2>
                    </div>
                </div>
                <div class="col-lg-12">
                    <form id="search-form" name="gs" method="submit" role="search" action="#">
                        <div class="row">
                            <div class="col-lg-3 align-self-center">
                                <fieldset>
                                    <select name="area" class="form-select" aria-label="Area" id="chooseCategory" onchange="this.form.click()">
                                        <option selected>Affaire</option>
                                        <option value="Affaire">Association</option>
                                        <option value="Controleur">Controleur</option>
                                        <option value="Equipement">Equipement</option>
                                        <option value="Parametrage">Parametrage</option>
                                        <option value="RetourControleur">Retour de Controleur</option>
                                        <option value="RetourEquipement">Retour d'Equipement</option>
                                        <option value="TypeControleur">Type de Controleur</option>
                                    </select>
                                </fieldset>
                            </div>
                            <div class="col-lg-3 align-self-center">
                                <fieldset>
                                    <input type="address" name="address" class="searchText" placeholder="Nom de la recherche" autocomplete="on" required>
                                </fieldset>
                            </div>
                            <div class="col-lg-3">
                                <fieldset>
                                    <button class="main-button"><i class="fa fa-search"></i> Recherchez maintenant</button>
                                </fieldset>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-lg-10 offset-lg-1">
                    <ul class="categories">
                        <li>
                            <a class="icon" asp-action="index" asp-controller="Affaire"><img src="css/assets/images/ApiEngr.png"><p>Affaire</p></a>
                            <a class="icon" asp-action="index" asp-controller="AssocEqCont"><img src="css/assets/images/ApiEngr.png"><p>Association</p></a>
                            <a class="icon" asp-action="index" asp-controller="Controleur"><img src="css/assets/images/ApiEngr.png"><p>Contrôleur</p></a>
                            <a class="icon" asp-action="index" asp-controller="Equipement"><img src="css/assets/images/ApiEngr.png"><p>Equipement</p></a>
                            <a class="icon" asp-action="index" asp-controller="Parametrage"><img src="css/assets/images/ApiEngr.png"><p>Parametrage</p></a>
                            <a class="icon" asp-action="index" asp-controller="RetourControleur"><img src="css/assets/images/ApiEngr.png"><p>Retour des Contrôleurs</p></a>
                            <a class="icon" asp-action="index" asp-controller="RetourEquipement"><img src="css/assets/images/ApiEngr.png"><p>Retour des Equipements</p></a>
                            <a class="icon" asp-action="index" asp-controller="TypeControleur"><img src="css/assets/images/ApiEngr.png"><p>Type de contrôleur</p></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <main role="main" class="container pb-3 flex-grow-1">
        @RenderBody()
    </main>

